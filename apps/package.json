{
  "name": "@aceceed/edge-runtime",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/main.js",
  "scripts": {
    "dev": "pnpm -C ../packages/shared build && ACECEED_CONFIG=../configs/config.yaml NODE_ENV=development tsx src/main.ts",
    "build": "pnpm -C ../packages/shared build && tsup src/main.ts --format esm --sourcemap",
    "start": "ACECEED_CONFIG=../configs/config.yaml node dist/main.js",
    "lint": "eslint src --ext .ts",
    "test": "vitest run --root .. --config vitest.config.ts ../tests",
    "test:cov": "vitest run --coverage --root .. --config vitest.config.ts ../tests",
    "format": "prettier src --check"
  },
  "dependencies": {
    "@aceceed/shared": "workspace:*",
    "@fastify/websocket": "^10.0.1",
    "fastify": "^4.28.1",
    "node-record-lpcm16": "^1.0.1",
    "pino": "^9.3.2",
    "yaml": "^2.5.1"
  },
  "optionalDependencies": {
    "onoff": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "eslint": "^9.8.0",
    "prettier": "^3.3.3",
    "tsup": "^8.3.5",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4",
    "vitest": "^2.1.0"
  }
}
